<% if @articles.present? %>
  <div class="row">
    <div class="col-sm-12">
      <% @articles.each do |article| %>
        <div class="card">
          <div class="card-block">
            <h4 class="card-title">
              <%= link_to article.title, article %>
            </h4>
            <p class="card-text">
              <%= @markdown.render(article.body).html_safe %>
            </p>
          </div>
          <div class="card-footer">
            <%= link_to "Edit", edit_article_path(article), class: 'btn btn-outline-success' %>
            
            <%= link_to 'Del', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-warning' %>
            <i class="pull-xs-right"><%= article.comments.count %> comment &nbsp;&nbsp; <%= article.view %> view</i>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>There are no articles containing <%= params[:search] %>.</p>
<% end %>

<br/>
<center>        
  <%= link_to 'New Article', new_article_path, class: "btn btn-outline-info btn-lg" %>
</center>
